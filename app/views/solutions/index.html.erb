<p id="notice"><%= notice %></p>


<h1>Listing Solutions
  <% if @solutions.empty? || @solutions[0].nil? %>
    <%= link_to new_event_solutions_path(params[:id]) do %>
      <span class="glyphicon glyphicon-plus small"></span>
    <% end %>
  <% end %>

  <%= link_to "/events" do %>
    <span class="glyphicon glyphicon-backward small"></span>
  <% end %>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Text</th>
      <th>Provider</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <% if solution %>
        <tr>
          <td>
            <% if @event.is_solution_published %>
              <%= solution.text %>
            <% else %>
              <div class="text-muted bg-warning text-capitalize text-warning">Solution not published yet.</div>
            <% end %>
          </td>
          <td><%= solution.provider %></td>
          <td><%= link_to  "/events/#{@event.id}/solutions/#{solution.id}/edit" do %>
              <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          </td>
          <td><%= link_to "/events/#{@event.id}/solutions/#{solution.id}", method: :delete, data: { confirm: 'Are you sure?' } do%>
            <span class="glyphicon glyphicon-remove text-danger" title="Delete"></span>
            <% end %>
              </td>
        </tr>
      <% else %>
        <tr>
          <td>
            <div class="text-muted bg-warning text-capitalize text-warning">Solution not ready yet.</div>
          </td>
          <td><div class="text-capitalize small">Guess who will be here...</div></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
