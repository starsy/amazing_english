<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Trainee</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <% if answer %>
        <tr>
          <td><%= answer.text %></td>
          <td><%= answer.trainee %></td>
          <td><%= answer.score %></td>
          <td><%= link_to 'Show', "/events/#{params[:id]}/answers/#{answer.id}" %></td>
          <td><%= link_to 'Edit', "/events/#{params[:id]}/answers/#{answer.id}/edit" %></td>
          <td><%= link_to 'Destroy', "/events/#{params[:id]}/answers/#{answer.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_event_answers_path(params[:id]) %>
